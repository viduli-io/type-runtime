{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**"],
  "ts-node": {
    "esm": true,
    "swc": true,
    "files": false
  }
}
